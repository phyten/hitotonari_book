<!-- base_periods#new_name -->

<div class="container contents-wrapper">
  <h2>誕生から今までを大まかな時期に分けてみよう</h2>
  

<!-- base_periodsの新規登録(books#updateに回す)-->   
  <%= form_for(@book, url: book_path(@book , xxx: "yyy"), html: {method: "patch"}) do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

    <%= f.fields_for :base_periods, @base_periods do |bp| %>
      <%= bp.label :name, 'Period' %>
      <%= bp.text_field :name %>
      <%= hidden_field_tag :book_id, @base_period.book.id %>
    <% end %>

    <%= f.submit '次へ' %>
    <!-- @book#showにリンク(books_controllerで指定) -->
  <% end %>

  <%= link_to 'トップに戻る', root_path %>
  </div>